<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".AddAttachments">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/AddAttachments"
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:typeface="monospace"/>

    <LinearLayout
        android:id="@+id/llTopAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAttachTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="@string/AttachmentTitle"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etAttachName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="@string/AttachmentName"
            android:inputType="text"
            android:singleLine="true"
            android:focusableInTouchMode="false"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Add" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llTopAttachment"
        android:visibility="visible"
        android:layout_margin="0dp"
        android:fontFamily="sans-serif-thin">

        <ListView
            android:id="@+id/lvAttachments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_margin="20dp"
            android:choiceMode="none"
            android:divider="@color/grey2"
            android:dividerHeight="0.5dp"
            android:padding="10dp"
            android:fontFamily="sans-serif-light"
            android:fadeScrollbars="true" >

        </ListView>


    </LinearLayout>

</RelativeLayout>