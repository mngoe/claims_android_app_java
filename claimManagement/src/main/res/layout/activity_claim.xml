<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.openimis.imisclaims.ClaimActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:isScrollContainer="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:layout_margin="10dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etHealthFacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/HealthFacility"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:maxLength="8">
            </EditText>
            <EditText
                android:id="@+id/etClaimAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ClaimAdmin"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:maxLength="8">
            </EditText>
            <EditText
                android:id="@+id/etClaimCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ClaimCode"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:maxLength="8">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etGuaranteeNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/GuaranteeNo"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:maxLength="8">
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCHFID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/CHFID"
                    android:fontFamily="sans-serif-light"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="20">
                </EditText>

                <ImageButton
                    android:id="@+id/btnScan"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="@string/Scan"
                    android:scaleType="fitXY"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/scan" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/StartDate"
                    android:fontFamily="sans-serif-light"
                    android:ems="10"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/etEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/EndDate"
                    android:fontFamily="sans-serif-light"
                    android:ems="10"
                    android:layout_weight="1"/>
            </LinearLayout>

            <AutoCompleteTextView
                android:id="@+id/etDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Diagnosis"
                android:ems="10"

                android:fontFamily="sans-serif-light"
                android:maxLength="6">
            </AutoCompleteTextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<EditText-->
                <!--android:id="@+id/etDiagnosis1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="@string/Diagnosis1"-->
                <!--android:ems="10" -->
                <!--android:maxLength="6"-->
                <!--android:layout_weight="1"/>-->

                <AutoCompleteTextView
                    android:id="@+id/etDiagnosis1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/Diagnosis1"
                    android:ems="10"
                    android:maxLength="6"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight="1"

                    />

                <AutoCompleteTextView
                    android:id="@+id/etDiagnosis2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/Diagnosis2"
                    android:ems="10"
                    android:maxLength="6"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <AutoCompleteTextView
                    android:id="@+id/etDiagnosis3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/Diagnosis3"
                    android:ems="10"
                    android:maxLength="6"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight="1"/>
                <AutoCompleteTextView
                    android:id="@+id/etDiagnosis4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/Diagnosis4"
                    android:ems="10"
                    android:maxLength="6"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight="1"/>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/VisitType"/>

                <RadioGroup
                    android:id="@+id/rgVisitType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbEmergency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="1"
                        android:text="@string/Emergency" />

                    <RadioButton
                        android:id="@+id/rbReferral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="2"
                        android:text="@string/Referral" />

                    <RadioButton
                        android:id="@+id/rbDisease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="3"
                        android:text="@string/Disease" />

                    <RadioButton
                        android:id="@+id/rbMaternity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="4"
                        android:text="@string/Maternity" />

                    <RadioButton
                        android:id="@+id/rbHta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="5"
                        android:text="@string/HTA" />

                    <RadioButton
                        android:id="@+id/rbDiabete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="6"
                        android:text="@string/Diabete" />

                    <RadioButton
                        android:id="@+id/rbReanimation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="7"
                        android:text="@string/Reanimation" />

                    <RadioButton
                        android:id="@+id/rbAVP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="8"
                        android:text="@string/AVP" />

                    <RadioButton
                        android:id="@+id/rbOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="O"
                        android:text="@string/Other" />

                </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PrescriberType"/>

            <RadioGroup
                android:id="@+id/rgPrescriberType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbMidwife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="1"
                    android:text="@string/Midwife"/>

                <RadioButton
                    android:id="@+id/rbHTechnician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="2"
                    android:text="@string/HealthTechnician"/>

                <RadioButton
                    android:id="@+id/rbGeneralDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="3"
                    android:text="@string/GeneralDoctor"/>

                <RadioButton
                    android:id="@+id/rbSpecialistDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="4"
                    android:text="@string/SpecialistDoctor"/>

                <RadioButton
                    android:id="@+id/rbDentist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5"
                    android:text="@string/Dentist"/>

                <RadioButton
                    android:id="@+id/rbNurse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="6"
                    android:text="@string/Nurse"/>
            </RadioGroup>
        </LinearLayout>


    </ScrollView>
    <LinearLayout android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/Gray" >


        <LinearLayout android:id="@+id/llLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="3dp" >


                <TextView
                    android:id="@+id/tvItemLable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/Item"
                    android:visibility="invisible"
                    android:textColor="@color/cyan" />


                <TextView
                    android:id="@+id/tvServiceLable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/Service"
                    android:textColor="@color/cyan" />


                <!--        <TextView -->
                <!--            android:id="@+id/tvTotalLable" -->
                <!--            android:layout_width="0dp" -->
                <!--            android:layout_height="wrap_content" -->
                <!--            android:layout_weight="0.33" -->
                <!--            android:gravity="right" -->
                <!--            android:text="@string/Total" -->
                <!--            android:textColor="@color/Green" /> -->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="3dp" >


                <TextView
                    android:id="@+id/tvItemTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/White" />


                <TextView
                    android:id="@+id/tvServiceTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/White" />


                <!--        <TextView -->
                <!--            android:id="@+id/tvTotal" -->
                <!--            android:layout_width="0dp" -->
                <!--            android:layout_height="wrap_content" -->
                <!--            android:layout_weight="0.33" -->
                <!--            android:gravity="right" -->
                <!--            android:textColor="@color/White" -->
                <!--            android:textStyle="bold" /> -->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btnNew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/New" />

            <Button
                android:id="@+id/btnPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Save" />
<!--            <Button
                android:id="@+id/btnOpt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Options" />-->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
